<html class="no-js" lang="en">
    <head>
        <title>Mercato | MC Kitchen</title>
        <meta http-equiv="x-ua-compatible" content="ie=edge">
	    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <link href="https://fonts.googleapis.com/css?family=Zilla+Slab:300,300i" rel="stylesheet">
        <link rel='stylesheet' href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="{{ siteUrl }}css/bootstrap.css">
        <link rel="stylesheet" href="{{ siteUrl }}css/styles.css">
    </head>

    <body id="mercato" data-spy="scroll" data-target="#mainNav" data-offset="500" data-gr-c-s-loaded="true" style="position: relative">
        <div class="container-fluid full">
            <div class="both-navs fixed-top">
                <nav class="nav-global navbar-expand navbar navbar-dark bg-primary mx-auto">
                    <div class="container">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="{{ siteUrl }}mercato">Mercato</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ siteUrl }}">Kitchen</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ siteUrl }}catering">Catering</a>
                            </li>
                        </ul>
                    </div>
                </nav>
                    <nav class="nav-mercato navbar navbar-expand-md navbar-light" id="mainNav">
                    <div class="container mobile-nav">
                        <div class="row">
                            <div class="brand-container">
                            <a class="navbar-brand mercato-brand" href="mercato.html"></a>
                            </div>
                            <div class="hamburger-container">
                                <button class="navbar-toggler hamburger hamburger--spring" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
                                    <span class="hamburger-box">
                                        <span class="hamburger-inner"></span>
                                    </span>
                                </button>
                            </div>
                        </div>
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav mx-auto mt-xs-5 mt-md-0">
                                <li class="nav-item">
                                    <a class="nav-link" href="#about" data-toggle="collapse" data-target=".navbar-collapse.show">About</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#weekly-provisions" data-toggle="collapse" data-target=".navbar-collapse.show">Weekly Provisions</a>
                                </li>
                                <a class="navbar-brand" href="mercato.html"></a>
                                <li class="nav-item">
                                    <a class="nav-link" href="#market-items" data-toggle="collapse" data-target=".navbar-collapse.show">Market Items</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#contact" data-toggle="collapse" data-target=".navbar-collapse.show">Hours & Contact</a>
                                </li>
                            </ul>
                        </div>
                    </div>  
                </nav>
            </div>
            
            
            <div id="replace-me">
                <div class="container-fluid">
                    <div id="carousel" class="carousel slide carousel-fade " data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active" style="background-image:url(assets/mercato-carousel/interior-1.png)">
                            </div>
                            <div class="carousel-item" style="background-image:url(../vendor/assets/mercato-carousel/frame.png)" role="img" aria-label="Art by Mike Piggott">
                            </div>
                            <div class="carousel-item" style="background-image:url(../vendor/assets/mercato-carousel/muffin.png)">
                            </div>
                            <div class="carousel-item" style="background-image:url(../vendor/assets/mercato-carousel/pillow.png)">
                            </div>
                            <div class="carousel-item" style="background-image:url(../vendor/assets/mercato-carousel/interior-2.png)">
                            </div>
                            <div class="carousel-item" style="background-image:url(../vendor/assets/mercato-carousel/coffee.png)">
                            </div>
                            <div class="carousel-item" style="background-image:url(../vendor/assets/mercato-carousel/chicken.png)">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container">
                <div id="about">
                    <p class="callout">
                        {{ entry.oneLiner }}
                    </p>
                    <div class="row">
                        <div class="col-sm-12 col-md-6 offset-md-3 lead">
                            
                            {{ entry.mercatoIntroCopy }} 
                            
                        </div>
                    </div>
                </div>
                <div id="weekly-provisions">
                    <h3>Weekly Provisions</h3>
                    <ul class="list-unstyled">
                            <li>
                                    <h4>Pressata</h4>
                                    <p class="lead">{{ entry.mercatoPressataOfTheWeek }} </p>
                            </li>
                            <li>
                                    <h4>Soup</h4>
                                    <p class="lead">{{ entry.mercatoSoupOfTheWeek }}</p>
                            </li>
                            <li>
                                    <h4>Salad</h4>
                                    <p class="lead">{{ entry.mercatoSaladOfTheWeek }}</p>
                            </li>

                    </ul>
                    
                </div>
                <div id="market-items">
                    <h3>Selected Market Items</h3>
                    <p class="callout">
                        {{ entry.marketItemsIntroText }} 
                    </p>
                    <div class="row">
                    {% for entry in craft.entries.section('mercatoMarketItems').limit(12).all() %}
                        <div class="col-sm-12 col-md-6 col-lg-4">
                            <div class="market-item-container bg-mck-light align-self-center">
                                <img class="market-item-image" src="../vendor/assets/products/product-9.png"/>
                            </div>
                            <p>{{ entry.title }}<br><i>{{ entry.marketItemBrand }}</i></p>
                        </div>
                    {% endfor %}
                    </div>
                </div>
                

            </div>
            
            <p></p>

        </div>
        <div class="border-bottom"></div>
        <footer id="contact">
            <div class="container">
                <div class="row">
                    <div class="col-12 col-md-6 col-lg-3">
                        <h4>Hours</h4>
                            <p>Monday – Thursday<br>12 noon – 10:00pm</p>
                            <p>Friday & Saturday<br>11:00 am – 11:00 pm</p>
                            <p>Sunday<br>11:00 am – 5:00 pm</p>
                        </p>
                    </div>
                    <div class="col-12 col-md-6 col-lg-3">
                        <h4>Location</h4>
                        <p><a href="https://goo.gl/maps/sKD6JkhuUJ42" target="_blank">4141 NE 2nd Ave # 101A<br>Miami, FL 33137</a></p>
                    </div>
                    <div class="col-12 col-md-6 col-lg-3">
                        <h4>Contact</h4>
                        <p>General Inquiries<br><a href="tel:305-456-9948" target="_blank">(305) 456-9948</a></p>
                        <p>Private & Group Dining<br><a href="mailto:info@mckitchenmiami.com" target="_blank">info@mckitchenmiami.com</a></p>
                    </div>
                    <div class="col-12 col-md-6 col-lg-3">
                        <h4>Connect</h4>
                        <p><a href="https://www.facebook.com/mckitchenmiami" target="_blank">Facebook</a></p>
                        <p><a href="https://www.instagram.com/mckitchenmiami" target="_blank">Instagram</a></p>
                        <p><a href="https://twitter.com/MCKitchenmiami" target="_blank">Twitter</a></p>
                    </div>
                </div>
            </div>
        </footer>
        


        <script src="{{ siteUrl }}js/jquery.min.js"></script>
        <script src="{{ siteUrl }}js/popper.min.js"></script>
        <script src="{{ siteUrl }}js/bootstrap.min.js"></script>
        <script src="{{ siteUrl }}js/widont.min.js"></script>
        <script src="{{ siteUrl }}js/script.js"></script>
        <!-- <script src="/js/history-api.js"></script> -->
    </body>
</html>